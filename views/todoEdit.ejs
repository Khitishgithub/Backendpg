<!DOCTYPE html>
<head>
  <title>Backened App</title>
  <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>


 
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %> <% if (details._id == idTask) { %>
        <li class="todo-list-item">
          <form action="/edit/<%= details._id %>" method="POST">
            <h3>Edit your Title</h3>
            <input type="text"  value="<%= details.title %>" name="title" />
            <h3>Edit your Content</h3>
            <input type="text" value="<%= details.content %>" name="content"  />
            <button type="submit">Confirm</button>
            <!-- <button class="glow-on-hover" type="submit">Confirm</button> -->
            <a href="/" class="cancel">Cancel</a>
          </form>




        </li>
        <% } else { %>
          <li class="todo-list-item">
            <div class="todo-list-item-name"><%= details.title %></div>
            <div class="todo-list-item-name"><%= details.content %></div>
            <a href="/edit/<%= details._id %>" class="edit">
              <span>Edit</span>
            </a>
            <a href="/remove/<%= details._id %>" class="remove">
              <span>Delete</span>
            </a>
          </li>
          <% } %> <% }) %>

      



      </ul>
    
    </div>
  </div>
</body>